@model KurumsalWeb.Models.Model.Hizmet
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLayoutt.cshtml";
}

<h2>Hizmet Düzenle</h2>

<main id="main" class="main">
    <div class="pagetitle">
        <!-- CKEditor'ü textarea'ya bağlama -->
        <script type="text/javascript">
            CKEDITOR.replace("Aciklama");
        </script>

        <!-- Hizmet düzenleme formu -->
        <div class="form">
            <form class="form-validate form-horizontal" id="feedback_form" method="post" action="/Hizmet/Edit/@Model.HizmetId" enctype="multipart/form-data">
                <!-- Başlık alanı -->
                <div class="form-group">
                    <label for="Baslık" class="control-label col-lg-2">Başlık <span class="required">*</span></label>
                    <div class="col-lg-10">
                        <input class="form-control" id="Baslık" name="Baslık" minlength="5" type="text" required value="@Model.Baslık" />
                    </div>
                </div>

                <!-- Açıklama alanı -->
                <div class="form-group">
                    <label for="Aciklama" class="control-label col-lg-2">Açıklama <span class="required">*</span></label>
                    <div class="col-lg-10">
                        <textarea id="Aciklama" name="Aciklama" required class="ckeditor">@Model.Aciklama</textarea>
                    </div>
                </div>

                <!-- Önceki Resim -->
                <div class="form-group">
                    <label for="previousImage" class="control-label col-lg-2">Önceki Resim</label>
                    <div class="col-lg-10">
                        <img src="@Model.ResimURL" height="150" width="150" alt="Önceki Hizmet Resmi" />
                    </div>
                </div>

                <!-- Yeni Resim Yükleme -->
                <div class="form-group">
                    <label for="ResimURL" class="control-label col-lg-2">Yeni Resim</label>
                    <div class="col-lg-10">
                        <input type="file" class="form-control" name="ResimURL" accept=".jpg,.png,.jpeg" />
                    </div>
                </div>

                <!-- Formun submit butonları -->
                <div class="form-group">
                    <div class="col-lg-offset-2 col-lg-10">
                        <button class="btn btn-primary" type="submit">Kaydet</button>
                        <a class="btn btn-default" href="/Hizmet/Index/">İptal</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</main>
