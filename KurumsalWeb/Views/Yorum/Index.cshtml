@model IEnumerable<KurumsalWeb.Models.Model.Yorum>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayoutt.cshtml";
}



<!-- DataTables kütüphanesinin CSS ve JavaScript dosyalarını ekleyin -->
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.min.css">
<script type="text/javascript" src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js"></script>

<script type="text/javascript">
    $(document).ready(function () {
        // DataTable kütüphanesini başlatıyoruz
        $('#myTable').DataTable({
            "language": {
                // Türkçe dil dosyasını kullanıyoruz
                "url": '//cdn.datatables.net/plug-ins/2.1.0/i18n/tr.json'
            }
        });
    });
</script>

<main id="main" class="main">

    <div class="pagetitle">
        <h2>Yorumlar </h2>
        <!-- Yeni kayıt ekleme bağlantısı -->
        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
        <!-- DataTable için tablo yapısı -->
        <table class="table" id="myTable">
            <thead>
                <tr>
                    <!-- Tablo başlıkları -->
                    <th>
                        @Html.DisplayNameFor(model => model.FirstOrDefault().Blog.Baslik)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstOrDefault().AdSoyad)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstOrDefault().Eposta)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstOrDefault().Icerik)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstOrDefault().Onay)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <!-- Yorum özelliklerini tablo hücrelerinde görüntülüyoruz -->
                        <td>
                            @Html.DisplayFor(modelItem => item.Blog.Baslik)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AdSoyad)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Eposta)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Icerik)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Onay)
                        </td>
                        <td>
                            <!-- İşlemler için bağlantılar -->
                            @Html.ActionLink("Güncelle", "Edit", new { id = item.YorumId }) |
                            @Html.ActionLink("Detay", "Details", new { id = item.YorumId }) |
                            @Html.ActionLink("Sil", "Delete", new { id = item.YorumId })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</main>
