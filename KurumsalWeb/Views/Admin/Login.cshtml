<body>
    
    <main>
        <div class="container">

            <section class="section register min-vh-100 d-flex flex-column align-items-center justify-content-center py-4">
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-4 col-md-6 d-flex flex-column align-items-center justify-content-center">

                            <div class="d-flex justify-content-center py-4">
                                <a href="index.html" class="logo d-flex align-items-center w-auto">
                                    <img src="/content/AdminLaoutt/assets/img/logo.png" alt="">
                                    <span class="d-none d-lg-block">ICED Company</span>
                                </a>
                            </div><!-- End Logo -->

                            <div class="card mb-3">

                                <div class="card-body">

                                    <div class="pt-4 pb-2">
                                        <h5 class="card-title text-center pb-0 fs-4">Hesabınıza giriş yapın</h5>
                                        <p class="text-center small">Giriş yapmak için E-postanızı ve şifrenizi girin</p>
                                    </div>

                                    <form class="login-form" method="post" action="/Admin/Login">

                                        <div class="login-wrap">
                                            @if (Session["adminid"] == null)
                                            {
                                                <p class="alert ">@ViewBag.Uyari</p>
                                            }


                                            <p class="login-img"> <i class="icon_lock_alt"> </i></p>
                                            <div class="input-group">
                                                <span  class="input-group-addon" <i class="icon_profile"></i></span>
                                                <input type="text" class="form-control" name="Eposta" placeholder="E posta" autofocus>

                                            </div>
                                            <h2></h2>
                                            <h2></h2>
                                            <div class="input-group">
                                                <span class="input-group-addon" <i class="icon_key_alt"></i></span>
                                                <input type="password" class="form-control" name="Sifre" placeholder="Şifre">

                                            </div>
                                            <h2></h2>

                                            <h2></h2>
                                            <button class="btn btn-primary btn-lg btn-blok w-100" type="submit">Giriş Yap</button>

                                            <h2></h2>
                                            <a href="/Admin/SifremiUnuttum/" class="btn btn-primary btn-lg btn-blok w-100">Şifremi Unuttum</a>


                                        </div>
                                    </form>

                                </div>
                            </div>

